@model IEnumerable<TopBusToursLondon_Model.Models.Newsletters>
@{
    ViewData["Title"] = "Subscriptions";
    ViewBag.Icon = "fas fa-rss";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container">
    <div class="row mb-1">
        <div class="col-6">
        </div>
        <div class="col-6">
            <div id="printbar" class="float-right">
            </div>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <div class="card card-purple shadow-lg">
            <div class="card-body" style="font-size: 15px">
                <table id="DT_load" class="table table-bordered table-striped table-hover w-100">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Is Active</th>
                            <th>Is Verified</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Email</td>
                                @if (item.IsActive)
                                {
                                    <td class="text-center"><a class="text-success" href=""><i class="fas fa-check-circle fa-2x"></i></a></td>
                                }
                                else
                                {
                                    <td class="text-center"><a class="text-danger" href=""><i class="fas fa-times-circle fa-2x"></i></a></td>
                                }
                                @if (item.IsVerified)
                                {
                                    <td class="text-center"><a class="text-success" href=""><i class="fas fa-check-circle fa-2x"></i></a></td>
                                }
                                else
                                {
                                    <td class="text-center"><a class="text-danger" href=""><i class="fas fa-times-circle fa-2x"></i></a></td>
                                }
                                <td>
                                    @*<a asp-action="Upsert" asp-controller="Category" asp-route-id="@item.Id" class='btn btn-outline-primary btn-sm text-primary mx-1' style="cursor:pointer">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>*@
                                    <a asp-action="Delete" asp-controller="Newsletters" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm text-danger mx-1" style="cursor: pointer">
                                        <i class="far fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Oops!</strong> No Newsletters exist
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>