@model IEnumerable<TopBusToursLondon_Model.Models.Schedule>
@{
    ViewData["Title"] = "Schedule";
    ViewBag.Icon = "fas fa-clock";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container">
    <a asp-action="Upsert" asp-controller="Schedule" class="btn btn-success mb-1 text-white">
        <i class="fas fa-plus-circle"></i> Add New Schedule
    </a>
    <div id="printbar" class="float-right"></div>
    @if (Model.Count() > 0)
    {
        <div class="card card-purple shadow-lg">
            <div class="card-body" style="font-size:15px">
                <table id="DT_load" class="table table-bordered table-striped table-hover w-100">
                    <thead>
                        <tr>
                            <th>Key</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Key</td>
                                <td>
                                    <a asp-action="Upsert" asp-controller="Schedule" asp-route-id="@item.Id" class='btn btn-outline-primary btn-sm text-primary mx-1' style="cursor:pointer">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a asp-action="Delete" asp-controller="Schedule" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm text-danger mx-1" style="cursor:pointer">
                                        <i class="far fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Oops!</strong> No Schedules were found. Please add a schedule first.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>