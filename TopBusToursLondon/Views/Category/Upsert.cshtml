@model TopBusToursLondon_Model.Models.Category

@{
    if (Model.Id != 0)
    {
        ViewData["Title"] = "Edit Category";
    }
    else
    {
        ViewData["Title"] = "Add New Category";
    }
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-success">
            <div class="card-header">
                <div class="card-title text-white">
                    @(Model.Id!=0 ? "Edit" : "Add New") Category
                </div>
            </div>
            <br />
            <div class="card-body bg-light border shadow">
                <form method="post">
                    @if (Model.Id != 0)
                    {
                        <input type="hidden" asp-for="Id" />
                    }
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CategoryName" class="control-label"></label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                        </label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><i class="fas fa-check-circle"></i> @(Model.Id != 0 ? "Update" : "Create") Category</button>
                        <a asp-action="Index" class="btn btn-warning"><i class="fas fa-sign-out-alt"></i> Go Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}