@model TopBusToursLondon.ViewModels.FeatureUpdateViewModel
@{
    ViewData["Title"] = "Edit Feature";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<form method="post" asp-action="Update">
    <input type="hidden" asp-for="Id" />
    <div class="card card-success">
        <div class="card-header">
            <div class="card-title">Edit Feature</div>
        </div>
        <div class="card-body bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <fieldset>
                <div class="row">
                    <div class="col-6">
                        <label>Tour</label>
                        <span class="form-control">@Model.Tour</span>
                    </div>
                    <div class="col-6">
                        <label>Ticket</label>
                        <span class="form-control">@Model.Ticket</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group form-check text-primary">
                    <label class="form-check-label">
                        <input class="form-check-input bg-primary" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fas fa-check-circle"></i> Update Feature</button>
                    <a asp-action="Index" class="btn btn-warning"><i class="fas fa-sign-out-alt"></i> Go Back</a>
                </div>
            </fieldset>
        </div>
    </div>
</form>